<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abid.cal.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="40sp"
            android:gravity="right"
            android:paddingRight="8dp"
            android:background="#fff"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            >

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="21dp"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/seven"
                android:layout_alignBottom="@+id/seven"
                android:layout_toEndOf="@+id/seven"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="9"
                android:layout_alignBaseline="@+id/eight"
                android:layout_alignBottom="@+id/eight"
                android:layout_toEndOf="@+id/eight" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/nine"
                android:layout_alignBottom="@+id/nine"
                android:layout_toEndOf="@+id/nine"
                android:text="/" />

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seven"
                android:textSize="25sp"
                android:layout_marginTop="22dp"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/four"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/four"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/five"
                android:layout_alignBottom="@+id/five"
                android:layout_toEndOf="@+id/five"
                android:textSize="25sp"
                android:text="6" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/six"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/six"
                android:text="*" />

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/one"
                android:layout_alignBottom="@+id/one"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/one"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/two"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/two"
                android:text="3" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/three"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/three"
                android:text="-" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:layout_below="@+id/one"
                android:layout_marginTop="33dp"
                android:text="." />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dot"
                android:textSize="25sp"
                android:layout_alignBottom="@+id/dot"
                android:layout_toEndOf="@+id/dot"
                android:text="0" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/zero"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/zero"
                android:text="=" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/sub"
                android:textSize="25sp"
                android:layout_alignTop="@+id/equal"
                android:text="+" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_toEndOf="@+id/dot"
                android:text="Back" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/back"
                android:text="Clear" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
